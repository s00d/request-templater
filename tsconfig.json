{
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "alwaysStrict": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "declaration": true,
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "dist",
  },

  "types": [
    "@types/node",
    "@types/ejs"
  ],
  "include": [
    "src/**/*.ts",
    "src/index.ts",
    "tests/jest/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.d.ts",
    "**/*.ejs"
  ]
}

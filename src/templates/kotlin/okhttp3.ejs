<%
// Extract parameters from the options object
const { url, method, mimeType, headers, postData, cookies } = locals;
%>

import okhttp3.*
import java.io.IOException

val client = OkHttpClient()

val url = "<%= url %>"
val method = "<%= method %>"
val mimeType = "<%= mimeType %>"

val body = <% if (postData.length > 0) { %>
  RequestBody.create(MediaType.parse(mimeType), "<%= postData.map(param => param.name + '=' + encodeURIComponent(param.value)).join('&') %>")
<% } else { %>
  null
<% } %>

val request = Request.Builder()
  .url(url)
  .<%= method.toLowerCase() %>(body)
  <% headers.forEach(header => { %>
    .addHeader("<%= header.name %>", "<%= header.value %>")
  <% }) %>
  <% cookies.forEach(cookie => { %>
    .addHeader("Cookie", "<%= cookie.name %>=<%= cookie.value %>")
  <% }) %>
  .build()

val response = client.newCall(request).execute()

println("Response: " + response.body()?.string())

<% const { url, method, mimeType, headers, postData, cookies } = locals; %>
<%# Create a new HTTP::Tiny object %>
use HTTP::Tiny;
my $http = HTTP::Tiny->new;

<%# Construct the request URL %>
my $fullUrl = '<%= url %>';

<%# Set up the request %>
my $options = {
headers => {
'Content-Type' => '<%= mimeType %>',
<% headers.forEach(header => { %>
'<%= header.name %>' => '<%= header.value %>',
<% }) %>
},
<% cookies.forEach(cookie => { %>
cookies => {
'<%= cookie.name %>' => '<%= cookie.value %>',
},
<% }) %>
};

<%# Add post data to the request %>
<% if (postData.length > 0) { %>
<% if (postData.length === 1 && postData[0].type === 'file') { %>
my $file = '<%= postData[0].value %>';
$options->{content} = $file;
<% } else { %>
my $post_data = {
<% postData.forEach(param => { %>
'<%= param.name %>' => '<%= param.value %>',
<% }) %>
};
$options->{content} = join('&', map { $_ . '=' . $post_data->{$_} } keys %$post_data);
<% } %>
<% } %>

<%# Send the request %>
my $response = $http->request('<%= method %>', $fullUrl, $options);

<%# Handle the response %>
if ($response->{success}) {
print "Response:\n";
print $response->{content};
}

<%# Handle errors %>
else {
print "Error: " . $response->{status} . "\n";
}
